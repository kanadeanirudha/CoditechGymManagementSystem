@using Coditech.Admin.Utilities;
@model OrganisationCentrewiseSmtpSettingSendTestEmailViewModel
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    Dictionary<string, string> keyValuePairs = new Dictionary<string, string>();
    keyValuePairs.Add("CentreCode", Model.CentreCode);
    keyValuePairs.Add("OrganisationCentreMasterId", Model.OrganisationCentreMasterId.ToString());
}
<div class="modal-header">
    <h6 class="modal-title m-0" id="exampleModalDefaultLabel">Send Test Email</h6>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
@using (Html.BeginForm("SendTestEmail", controllerName, FormMethod.Post, new { id = "frmSendDetails" }))
{
    @Html.HiddenFor(m => m.CentreCode)
    @Html.HiddenFor(m => m.OrganisationCentreMasterId)
    @Html.Hidden("IsEmailMessage", true)

    <div class="modal-body">
        <div class="row">
            <div class="col-lg-9">
                <div class="mb-3">
                    @Html.LabelFor(x => x.TO, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.TO, new { @class = "form-control"})
                    @Html.ValidationMessageFor(x => x.TO)
                </div>
            </div>
            <div class="col-lg-9">
                <div class="mb-3">
                    @Html.LabelFor(x => x.CC, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.CC, new { @class = "form-control"})
                    @Html.ValidationMessageFor(x => x.CC)
                </div>
            </div>
            <div class="col-lg-9">
                <div class="mb-3">
                    @Html.LabelFor(x => x.BCC, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.BCC, new { @class = "form-control"})
                    @Html.ValidationMessageFor(x => x.BCC)
                </div>
            </div>
            <div class="col-lg-9">
                <div class="mb-3">
                    @Html.LabelFor(x => x.Subject, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control"})
                    @Html.ValidationMessageFor(x => x.Subject)
                </div>
            </div>
            <div class="col-lg-9">
                <div class="mb-3">
                    @Html.LabelFor(x => x.Body, new { @class = "form-label required" })
                    @Html.TextAreaFor(x => x.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Body)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer d-flex justify-content-lg-start">
        <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
}
@Html.Partial("_ValidationScriptsPartial")
@section scripts {
    <!-- end page content -->
    <script src="~/js/coditech/Organisation/OrganisationCentre.js"></script>
}
