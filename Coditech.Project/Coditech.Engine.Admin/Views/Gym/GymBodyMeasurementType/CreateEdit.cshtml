@model GymBodyMeasurementTypeViewModel
@{
    ViewBag.Title = Model.GymBodyMeasurementTypeId > 0 ? "Update GymBodyMeasurementType" : "Add GymBodyMeasurementType";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.GymBodyMeasurementTypeId > 0)
                                {
                                    <h4 class="card-title">Update Gym Body Measurement Type</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Gym Body Measurement Type</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GymBodyMeasurementTypeId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.BodyMeasurementType, new { @class = "form-label required"})
                                        @Html.TextBoxFor(x => x.BodyMeasurementType, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(x => x.BodyMeasurementType)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.GeneralMeasurementUnitMasterId, new { @class = "form-label required"})
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                                    {
                                    DropdownType = DropdownTypeEnum.MeasurementUnit.ToString(),
                                    DropdownName = "GeneralMeasurementUnitMasterId",
                                    DropdownSelectedValue = Model.GeneralMeasurementUnitMasterId
                                    .ToString()
                                    })
                                        @Html.ValidationMessageFor(x => x.GeneralMeasurementUnitMasterId)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DisplayOrder, new { @class = "form-label"})
                                        @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control", type="number"})
                                        @Html.ValidationMessageFor(x => x.DisplayOrder)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label"})
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input"})
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
